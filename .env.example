# Environment variables
NODE_ENV=development

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/blue_ocean_explorer?schema=public"

# Application
BASE_URL=http://localhost:3000
BASE_URL_OTHER_PORT=http://localhost:3001

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ADMIN_PASSWORD=admin-password-change-this

# AI/ML Services
OPENROUTER_API_KEY=your-openrouter-api-key

# Payment Processing (Stripe)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Platform Settings
DEFAULT_COMMISSION_RATE=0.70
REFERRAL_REWARD_AMOUNT=10

# MinIO Object Storage (for file uploads)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=blue-ocean-explorer

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379

# Email Service (SendGrid/Resend/etc)
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your-email-api-key
EMAIL_FROM=noreply@blueoceanexplorer.com

# Monitoring and Analytics
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
POSTHOG_API_KEY=your-posthog-api-key
POSTHOG_HOST=https://app.posthog.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-change-this
SESSION_MAX_AGE=2592000000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Feature Flags
ENABLE_MARKETPLACE=true
ENABLE_AI_FEATURES=true
ENABLE_BETA_FEATURES=false

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Health Check
HEALTH_CHECK_INTERVAL=30000