# Environment
NODE_ENV=development

# Database
DATABASE_URL="file:./dev.db"

# Server
BASE_URL=http://localhost:3000
BASE_URL_OTHER_PORT=http://localhost:5173

# Security
ADMIN_PASSWORD=your-admin-password
JWT_SECRET=your-secret-jwt-key-minimum-32-characters

# AI Provider (OpenRouter - supports multiple models)
# Get your API key from https://openrouter.ai/
OPENROUTER_API_KEY=your-openrouter-api-key-here

# Payment (Optional - for Stripe integration)
# Get your keys from https://stripe.com/
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Business Configuration
DEFAULT_COMMISSION_RATE=0.70
REFERRAL_REWARD_AMOUNT=10

# MinIO/S3 Storage (Optional)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET=blue-ocean-uploads
